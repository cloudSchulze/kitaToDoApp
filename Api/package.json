{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "rimraf dist",
    "prestart:win:dev": "rimraf dist",
    "start:dev": "docker volume create kitaToDo_db_data && DB_PORT=4599 docker compose -f docker-compose.yml -p kitaToDo_dev up -d --build -V --remove-orphans && yarn start:debug",
    "start:dev:win": "docker volume create kitatodo_db_data&&SET DB_PORT=4599&&docker compose -f docker-compose.yml -p kitaToDo_dev up -d --build -V --remove-orphans&&npm run start:win:debug",
    "start:debug": "NODE_ENV=develop nest start --debug 0.0.0.0:9229 --watch",
    "start:win:debug": "SET NODE_ENV=develop&&nest start --debug 0.0.0.0:9229 --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretypeorm": "(rm ormconfig.json || :)&&ts-node -r tsconfig-paths/register src/scripts/write-type-orm-config.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:generate": "yarn run typeorm -- migration:generate -n",
    "typeorm:migration:run": "yarn run typeorm -- migration:run",
    "typeorm:migration:revert": "yarn run typeorm migration:revert",
    "pretypeorm:win": "del ormconfig.json&&ts-node -r tsconfig-paths/register src/scripts/write-type-orm-config.js",
    "typeorm:win": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:win:migration:generate": "yarn run typeorm:win -- migration:generate -n",
    "typeorm:win:migration:run": "yarn run typeorm:win -- migration:run",
    "typeorm:win:migration:revert": "yarn run typeorm:win migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
